# Backend API Configuration
REACT_APP_API_URL=https://your-backend-api.com/api

# Mock Backend Configuration (for development/testing)
# Set to 'true' to use mock backend when real backend is unavailable
REACT_APP_USE_MOCK_BACKEND=true

# Authentication Configuration
REACT_APP_JWT_SECRET=your-jwt-secret-key

# Database Configuration (for backend reference)
DATABASE_URL=postgresql://username:password@localhost:5432/fitlife_db

# Optional: Third-party integrations
REACT_APP_GOOGLE_CLIENT_ID=your-google-oauth-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Development settings
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true

# API Rate Limiting
REACT_APP_API_RATE_LIMIT=100

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email Configuration (for backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
REACT_APP_ANALYTICS_ID=your-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn
